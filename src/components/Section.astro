---
const { heading } = Astro.props;
const divId = heading.toLowerCase().split(' ').join('-');
---

<div class='section' id={divId}>
  <div class='section-heading'>
    <h2>
      {heading}
    </h2>
    <div class='divider'></div>
  </div>
  <slot />
</div>

<style>
  .section {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .section-heading {
    position: sticky;
    top: 0;
    background-color: #fff;
    padding: 10px 0;
    display: flex;
    justify-content: center;
    align-items: center;

    h2 {
      width: fit-content;
    }

    .divider {
      height: 2px;
      margin: 2px 0 0 10px;
      flex-grow: 1;
      background-color: #212121;
    }
  }
</style>
