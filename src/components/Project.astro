---
import type { ProjectDetails } from '../types';
import ExternalLink from './icons/ExternalLink.astro';
import GitHub from './icons/GitHub.astro';
interface Props {
  project: ProjectDetails;
}
const { project } = Astro.props;
const { projectTitle, projectLink, projectImagePath, repositoryLinks, details } = project;
---

<div class='project-content'>
  <div class='project-left heading-container'>
    <img src={projectImagePath} class='project-image' />
  </div>
  <div class='project-right'>
    <div class='heading-container'>
      {
        projectLink ? (
          <a href={projectLink} target='_blank' class='project-link'>
            <h4>{projectTitle}</h4>
            <ExternalLink />
          </a>
        ) : (
          <h4>{projectTitle}</h4>
        )
      }
      {
        repositoryLinks ? (
          <div class='repository-links'>
            {repositoryLinks.map(({ linkHref, linkTitle }) => {
              return (
                <a href={linkHref} target='_blank' class='repo-link'>
                  <GitHub size={12} />
                  {linkTitle}
                  <ExternalLink />
                </a>
              );
            })}
          </div>
        ) : null
      }
    </div>
    <div class='paragraph-stack'>
      {
        details.map((detail) => {
          return <p>{detail}</p>;
        })
      }
    </div>
  </div>
</div>

<style>
  h4,
  .project-link {
    color: #646464;
    display: flex;
    gap: 4px;
    align-items: center;
    font-size: 1rem;
    font-style: normal;
    font-weight: 600;
    line-height: 1.0625rem; /* 94.444% */
    letter-spacing: -0.2px;
    text-decoration: none;
  }

  .project-image {
    width: 12.5rem;
  }

  .repository-links {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .repo-link {
    display: flex;
    align-items: center;
    gap: 4px;
    font-weight: 500;
    color: #646464;
    text-decoration: none;
  }

  .project-content {
    display: flex;
    gap: 1.25rem;
    padding: 0 0.625rem;
  }

  .heading-container {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .project-left {
    min-width: 12.5rem;
  }

  .project-right {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    width: 100%;
  }
</style>
