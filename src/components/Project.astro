---
import type { ProjectDetails } from '../types';
import GitHub from './icons/GitHub.astro';
interface Props {
  project: ProjectDetails;
}
const { project } = Astro.props;
const { projectTitle, projectLink, projectImagePath, repositoryLinks, details } = project;
---

<div class='project-content'>
  <div class='project-left heading-container'>
    <img src={projectImagePath} class='project-image' />
  </div>
  <div class='project-right'>
    <div class='heading-container'>
      {
        projectLink ? (
          <a href={projectLink} target='_blank' class='project-link'>
            {projectTitle}
          </a>
        ) : (
          <h4>{projectTitle}</h4>
        )
      }
      {
        repositoryLinks ? (
          <div class='repository-links'>
            {repositoryLinks.map(({ linkHref, linkTitle }) => (
              <a href={linkHref} target='_blank' class='project-link repo-link'>
                <img src='/img/svg-icons/github.svg' width='12px' height='12px' /> {linkTitle}
              </a>
            ))}
          </div>
        ) : null
      }
    </div>
    <div class='paragraph-stack'>
      {
        details.map((detail) => {
          return <p>{detail}</p>;
        })
      }
    </div>
  </div>
</div>

<style>
  .project-link {
    display: flex;
    gap: 4px;
    align-items: center;
  }

  .project-image {
    width: 12.5rem;
  }

  .repository-links {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .repo-link {
    font-weight: 500;
  }

  .project-content {
    display: flex;
    gap: 1.25rem;
    padding: 0 0.625rem;
  }

  .heading-container {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .project-left {
    min-width: 12.5rem;
  }

  .project-right {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    width: 100%;
  }
</style>
