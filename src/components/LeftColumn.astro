---
import Chip from './Chip.astro';

const skills = [
  'TypeScript',
  'React',
  'Node',
  'Express',
  'Mocha/Chai',
  'Jest',
  'NextJS',
  'SvelteKit',
  'Postgres',
  'SQL',
  'Docker',
  'laC',
];
---

<div class='blurb-skills'>
  <div class='title-blurb'>
    <h3>Software Engineer</h3>
  </div>
  <div class='skills'>
    {
      skills.map((skill) => {
        return <Chip content={skill} />;
      })
    }
  </div>
  <div class='navigation-links'>
    <a href='#experience'>Experience</a>
    <a href='#software-projects'>Software Projects</a>
    <a href='#other-projects'>Other Projects</a>
  </div>
</div>
<a href='/resume.pdf' target='_blank'>{`See My Résumé `}</a>

<style>
  .blurb-skills {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .title-blurb {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .skills {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
  }

  .navigation-links {
    padding-top: 10rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .navigation-links a {
    transition: all 0.5s;
    /* margin-left: 0; */
  }

  a.active {
    color: var(--primary-black);
    margin-left: 1rem;
    display: list-item;
  }
</style>
