---
import Chip from './Chip.astro';

const skills = [
  'TypeScript',
  'React',
  'Node',
  'Express',
  'Mocha/Chai',
  'Jest',
  'NextJS',
  'SvelteKit',
  'Postgres',
  'SQL',
  'Docker',
  'laC',
];
---

<div class='blurb-skills'>
  <div class='title-blurb'>
    <h3>Software Engineer</h3>
    <a href='/resume.pdf' target='_blank' class='resume-link-mobile'>{`See My Résumé `}</a>
  </div>
  <div class='skills'>
    {
      skills.map((skill) => {
        return <Chip content={skill} />;
      })
    }
  </div>
  <div class='navigation-links'>
    <a href='#experience'>Experience</a>
    <a href='#software-projects'>Software Projects</a>
    <a href='#other-projects'>Other Projects</a>
  </div>
</div>
<a href='/resume.pdf' target='_blank' class="resume-link">{`See My Résumé `}</a>

<style>
  .blurb-skills {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    @media (min-width: 830px) {
      gap: 2.5rem;
    }
  }

  .title-blurb {
    display: flex;
    flex-direction: row;
    justify-content: space-between;

    @media (min-width: 830px) {
      flex-direction: column;
      .resume-link-mobile {
        display: none;
      }
    }
  }

  .skills {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    padding: 0.5rem 0;
    @media (min-width: 830px) {
      padding: 0;
    }
  }

  .navigation-links {
    display: none;
    @media (min-width: 830px) {
      padding-top: 10rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
  }

  .resume-link {
    display: none;
  }

  .navigation-links a {
    transition: all 0.5s;
  }

  a.active {
    color: var(--primary-black);
    margin-left: 1rem;
    display: list-item;
  }
</style>
