---
import LeftColumn from '../components/LeftColumn.astro';
import RightColumn from '../components/RightColumn.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title='Beau Jorgensen | Software Developer'>
  <div class='columns'>
    <div class='left'>
      <LeftColumn />
    </div>
    <div class='right'>
      <RightColumn />
    </div>
  </div>
</Layout>

<script>
  const sections = document.querySelectorAll<HTMLElement>('.section[id]');
  const rightColumn = document.querySelector<HTMLElement>('.right');

  if (rightColumn) rightColumn.addEventListener('scroll', navHighlighter);

  function navHighlighter() {
    // Get current scroll position
    let scrollY = window.pageYOffset;

    // Now we loop through sections to get height, top and ID values for each
    sections.forEach((current) => {
      const sectionHeight = current.offsetHeight;
      const sectionTop = current.getBoundingClientRect().top + window.pageYOffset - 100;
      const sectionId = current.getAttribute('id');
      // const scrollDistance = scrollY - sectionTop;
      // const scrollPercentage =  scrollDistance / sectionHeight;
      // if (current.id === 'experience') console.log(scrollPercentage);
      if (
        scrollY > sectionTop &&
        scrollY <= sectionTop + sectionHeight &&
        document.querySelector('a[href*=' + sectionId + ']')
      ) {
        document.querySelector('a[href*=' + sectionId + ']').classList.add('active');
      } else {
        document.querySelector('a[href*=' + sectionId + ']').classList.remove('active');
      }
    });
  }
</script>

<style>
  .columns {
    width: 100%;
    height: 100%;
    display: flex;
    gap: 3rem;
    flex: 1 0 0;
    overflow: scroll;

    .left {
      display: flex;
      width: 40%;
      max-width: 27rem;
      height: 100%;
      flex-direction: column;
      gap: 125px;
    }

    .right {
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      gap: 60px;
      flex: 1 0 0;
      overflow: scroll;
      scroll-behavior: smooth;
    }
  }
</style>
