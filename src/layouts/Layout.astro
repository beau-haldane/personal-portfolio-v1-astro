---
import '@fontsource-variable/work-sans';
// import '@fontsource/trirong';
import GitHub from '../components/icons/GitHub.astro';
import LinkedIn from '../components/icons/LinkedIn.astro';
import Email from '../components/icons/Email.astro';

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.png' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class='container'>
      <h1 class='border-overlap top'>Beau Jorgensen</h1>
      <div class='content'>
        <slot />
      </div>
      <div class='border-overlap bottom'>
        <a href='https://github.com/beau-haldane' target='_blank'><GitHub /></a>
        <a href='https://www.linkedin.com/in/beau-jorgensen/' target='_blank'><LinkedIn /></a>
        <a href='/contact'><Email /></a>
      </div>
    </div>
  </body>
</html>

<style is:global>
  @font-face {
    font-family: 'Trirong-Bold';
    src: url('/fonts/Trirong-Bold.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  h1 {
    font-size: 2rem;
    @media (min-width: 640px) {
      font-size: 2.25rem;
    }
  }
  h1,
  h2 {
    font-family: 'Trirong-Bold';
  }

  h1,
  h2,
  h3,
  h4 {
    line-height: 0.8;
  }

  html,
  body {
    height: 100%;
    margin: 0;
    padding: 0;
    font-family: 'Work Sans Variable', sans-serif;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  * {
    box-sizing: border-box;
  }

  body {
    width: 100%;
    display: flex;
    flex-direction: column;
  }
</style>
<style>
  .container {
    width: 90%;
    max-width: 1212px;
    height: 100%;
    margin: 3.125rem 0;
    /* padding: 20px 30px; */
    align-items: flex-start;
    gap: 1.25rem;
  }

  .content {
    height: 100%;
    width: 100%;
    border-top: solid 2px;
    border-bottom: solid 2px;
    display: flex;
    padding: 1.25rem 0;
    align-items: flex-start;
    gap: 1.25rem;
    flex: 1 0 0;

    @media (min-width: 640px) {
      padding: 1.25rem 1.875rem;
      border: solid 2px;
    }
  }

  .border-overlap {
    position: absolute;
    background-color: #fff;
    padding: 0 0.625rem 0 0;
    @media (min-width: 640px) {
      padding: 0 0.625rem;
    }
  }

  .top {
    @media (min-width: 640px) {
      margin: -0.9375rem 0 0 1.875rem;
    }
    margin-top: -0.9375rem;
  }

  .bottom {
    @media (min-width: 640px) {
      margin: -1rem 0 0 1.875rem;
    }
    margin-top: -1rem;
    display: flex;
    gap: 0.625rem;
  }
</style>
