---
import '@fontsource-variable/work-sans';
import '../styles/global.css';
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Software Developer portfolio for Beau Jorgensen' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.png' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <h1 class='border-overlap top'>Beau Jorgensen</h1>
      <div class='content-outline'>
        <slot />
      </div>
      <div class='border-overlap bottom'>
        <a href='https://github.com/beau-haldane' target='_blank' class='no-external-icon' aria-label='github-link'
          ><img src='/img/svg-icons/github.svg' alt='github-icon' /></a
        >
        <a
          href='https://www.linkedin.com/in/beau-jorgensen/'
          target='_blank'
          class='no-external-icon'
          aria-label='linkedin-link'><img src='/img/svg-icons/linkedIn.svg' alt='linkedin-icon' /></a
        >
        <a
          href='https://www.youtube.com/@beau-haldane'
          target='_blank'
          class='no-external-icon'
          aria-label='youtube-link'><img src='/img/svg-icons/youtube.svg' alt='youtube-icon' /></a
        >
        <a href='/contact' aria-label='contact-link'><img src='/img/svg-icons/email.svg' alt='email-icon' /></a>
      </div>
    </main>
    <footer>
      Designed and coded by yours truly with inspiration from <a href='https://brittanychiang.com/' target='_blank'
        >Britanny Chiang
      </a>.
    </footer>
  </body>
</html>

<style>
  main {
    width: 90%;
    max-width: 87.5em;
    height: 100%;
    margin: 3.125em 0 4em 0;
    gap: 1.25em;
    overflow: hidden;

    @media (min-width: 31.25em) {
      margin: 3.125em 0 3.5em 0;
    }
  }

  .content-outline {
    height: 100%;
    width: 100%;
    border-top: solid 0.125em;
    border-bottom: solid 0.125em;
    padding: 1.25em 0;

    @media (min-width: 51.875em) {
      padding: 1.25em 1.875em;
      border: solid 0.125em;
    }
  }

  .border-overlap {
    position: absolute;
    background-color: #fff;
    padding: 0 0.625em 0 0;
    @media (min-width: 51.875em) {
      padding: 0 0.625rem;
    }
  }

  .top {
    @media (min-width: 51.875em) {
      margin: -0.9375rem 0 0 1.25rem;
    }
    margin-top: -0.9375rem;
  }

  .bottom {
    @media (min-width: 51.875em) {
      margin: -1em 0 0 1.25em;
    }
    margin-top: -1em;
    display: flex;
    gap: 0.625em;
  }

  footer {
    position: fixed;
    bottom: 0;
    margin-bottom: 1.5em;
    width: 100%;
    text-align: center;
    font-size: 0.75em;
    line-height: 0.8em;
    a {
      font-weight: 400;
    }
  }
</style>
